{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "npm run generate:openapi && tsx --import ./src/instrumentation.ts --watch --env-file .env src/index.ts",
    "dev:docker": "npm run generate:openapi && tsx --import ./src/instrumentation.ts --watch src/index.ts",
    "start": "node --import ./dist/instrumentation.js dist/index.js",
    "build": "npm run generate:openapi && tsc",
    "type-check": "tsc --noEmit",
    "generate:openapi": "tsx src/openapi/generate.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:coverage": "vitest run --coverage",
    "check:any": "! grep -rn ': any\\|<any>\\|as any\\|Array<any>\\|Record<string, any>' src/",
    "check:types": "tsc --noImplicitAny --strict --noEmit",
    "check:casting": "grep -rn ' as [A-Z]' src/ || echo 'No type casting found'",
    "check:typescript-quality": "npm run check:any && npm run check:types && npm run check:casting"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@testcontainers/postgresql": "^11.7.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.9.1",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^4.0.6",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2",
    "testcontainers": "^11.7.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.66.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.207.0",
    "@opentelemetry/instrumentation-express": "^0.56.0",
    "@opentelemetry/instrumentation-http": "^0.207.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.207.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "decimal.js": "^10.6.0",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "postgres": "^3.4.7",
    "prom-client": "^15.1.3",
    "stacktrace-js": "^2.0.2",
    "swagger-ui-express": "^5.0.1",
    "vitest": "^4.0.4",
    "zod": "^4.1.12"
  },
  "imports": {
    "#*": "./src/*"
  }
}
