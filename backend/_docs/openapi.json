                    "status": {
                      "type": "string",
                      "enum": [
                        "ok"
                      ],
                      "example": "ok"
                    },
                    "timestamp": {
                      "type": "string",
                      "example": "2025-10-31T10:30:00.000Z"
                    }
                  },
                  "required": [
                    "message",
                    "status",
                    "timestamp"
                  ]
                }
              }
            }
          }
        }
      }
    },
