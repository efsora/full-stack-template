        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Hello from API"
          }
        },
        "required": [
          "message"
        ]
      },
      "CreateUserResponse": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "jane.doe@example.com"
          },
          "id": {
            "type": "integer",
            "exclusiveMinimum": 0,
            "example": 1
          },
          "name": {
            "type": [
              "string",
              "null"
            ],
            "example": "Jane Doe"
          },
          "token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          }
        },
        "required": [
          "email",
          "id",
          "name",
          "token"
        ]
      },
      "CreateUserBody": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "jane.doe@example.com"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "example": "Jane Doe"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "example": "securePassword123"
          }
        },
        "required": [
          "email",
          "name",
          "password"
        ]
      },
      "UserData": {
        "type": "object",
        "properties": {
          "createdAt": {
            "type": [
              "string",
              "null"
            ],
            "format": "date",
            "example": "2025-10-29T10:30:00.000Z"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "jane.doe@example.com"
          },
          "id": {
            "type": "integer",
            "exclusiveMinimum": 0,
            "example": 1
          },
          "name": {
            "type": [
              "string",
              "null"
            ],
            "example": "Jane Doe"
          },
          "updatedAt": {
            "type": [
              "string",
              "null"
            ],
            "format": "date",
            "example": "2025-10-29T10:30:00.000Z"
          }
        },
        "required": [
          "createdAt",
          "email",
          "id",
          "name",
          "updatedAt"
        ]
      }
