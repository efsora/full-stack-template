# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration
# Use service name 'postgres' as hostname in Docker network
DATABASE_URL=postgresql://backend_user:backend_password@postgres:5432/backend_db

# JWT Secret (change this in production!)
JWT_SECRET=docker-dev-secret-key-32chars-minimum-length-required

# Observability - Tracing
ENABLE_TRACING=true
TRACING_SAMPLE_RATE=1.0
OTEL_SERVICE_NAME=backend-api
# OTEL_EXPORTER_OTLP_ENDPOINT is optional - if not set, traces will be logged to console via ConsoleSpanExporter
# Uncomment the line below if you want to send traces to an external collector service
# OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318/v1/traces
METRICS_ENABLED=true

LOG_LEVEL=debug
LOGGER_PRETTY=true