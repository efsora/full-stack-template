{
  "name": "full-stack-template",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack + AI project template with monorepo architecture",
  "workspaces": [
    "backend",
    "frontend",
    "shared",
    "packages/*"
  ],
  "scripts": {
    "generate:types": "./scripts/generate-types.sh",
    "lint:contracts": "npm run lint --workspace=shared",
    "format:contracts": "npm run format --workspace=shared",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "shared/contracts/*.yaml": [
      "npm run lint:contracts",
      "npm run format:contracts"
    ],
    "backend/**/*.{ts,tsx,js,jsx}": [
      "cd backend && npm run lint",
      "cd backend && npm run type-check"
    ],
    "frontend/**/*.{ts,tsx,js,jsx}": [
      "cd frontend && npm run lint",
      "cd frontend && npm run type-check"
    ],
    "ai-service/**/*.py": [
      "cd ai-service && uv run ruff check .",
      "cd ai-service && uv run black --check .",
      "cd ai-service && uv run mypy ."
    ],
    "packages/**/*.{ts,tsx,js,jsx}": [
      "cd packages/common && npm run build"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
